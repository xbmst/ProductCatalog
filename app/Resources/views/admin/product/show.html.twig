{% extends 'base.html.twig' %}

{% block title %}Product {{ product.name }} details{% endblock %}

{% block body %}
    {% include 'breadcrumbs.html.twig' %}
    <div class="container">
        <div class="row">
            <div class="col s12">
                <ul class="collection with-header">
                    <li class="collection-header"><h4>{{ product.name }}</h4></li>
                    <li class="collection-item"><strong>Category:</strong> {{ product.category }}</li>
                    <li class="collection-item"><strong>SKU:</strong> {{ product.sku }}</li>
                    <li class="collection-item">
                        <p>
                            <strong>Description:</strong> {{ product.description }}
                        </p>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}